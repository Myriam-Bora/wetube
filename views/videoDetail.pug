extends layouts/main

block content   
    .video__player
        video(src=`/${video.fileUrl}`, controls=true)
    .video__info
        a(href=routes.editVideo(video.id)) Edit Video
        p.video__info__title=video.title
        span.video__info__views=video.views
        h6.video__info__description=video.description   
    .video__comments 
        if video.comments.length === 1 
            span.video_comment-number 1 comment
        else
            span.video_comment-number #{video.comments.length} comments
    
